{
  "name": "omnizap-site",
  "version": "1.0.1",
  "description": "Site oficial do projeto OmniZap com informações e estatísticas do GitHub",
  "main": "server.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js --env production",
    "dev": "pm2 start ecosystem.config.js --env development --watch",
    "stop": "pm2 stop omnizap-site",
    "restart": "pm2 restart omnizap-site",
    "reload": "pm2 reload omnizap-site",
    "delete": "pm2 delete omnizap-site",
    "logs": "pm2 logs omnizap-site",
    "monit": "pm2 monit",
    "status": "pm2 status",
    "format": "prettier --write .",
    "build:css": "tailwindcss build public/styles.css -o public/dist/styles.css",
    "watch:css": "tailwindcss build public/styles.css -o public/dist/styles.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kaikygr/omnizap.git"
  },
  "keywords": [
    "omnizap",
    "whatsapp",
    "bot",
    "dashboard",
    "estatísticas",
    "github"
  ],
  "author": "Kaikygr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kaikygr/omnizap/issues"
  },
  "homepage": "https://omnizap.shop",
  "dependencies": {
    "compression": "^1.8.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-useragent": "^1.0.15",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
